<p class="flash"><%= notice %></p>
<h1 class="headline">Books</h1>

<table class="table">
    <thead>
      <tr>
        <th><strong>Title</strong></th>
        <th><strong>Body</strong></th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <tr>
        <td class="tbody title"><%= book.title %></td>
        <td class="tbody body"><%= book.body %></td>
        <td class="tbody"><%= link_to "Show", book_path(book.id) %></td>
        <td class="tbody"><%= link_to "Edit", edit_book_path(book.id) %></td>
        <td class="tbody"><%= link_to "Destroy", destroy_book_path(book.id),method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
      </tr>
      <% end %>
    </tbody>
</table>

<h2 class="headline2">New book</h2>

<% if @book.errors.any? %>
  <div class="error">
  <p><%= @book.errors.count %>errors prohibited this book from being saved:</p>
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>



<div class="new">
<%= form_with model: @book do|f| %>
  <div class="box">
  <p>Title</p>
  <%= f.text_field :title %>
  </div>

	<div class="box">
  <p>Body</p>
  <%= f.text_area :body %>
  </div>

	<div class="box">
  <p><%= f.submit 'Create Book' %></p>
  </div>
<% end %>
</div>




