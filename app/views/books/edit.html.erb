<h1 class="headline">Editing Book</h1>
<div class="show">
<% if @book.errors.any? %>
  <div class="error">
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
  </div>
<% end %>


<%= form_with model: @book, url: update_book_path(@book.id), method: :patch do |f| %>
<div class="box">
<p>Title</p>
<%= f.text_field :title %>
</div>

<div class="box">
<p>Body</p>
<%= f.text_area :body %>
</div>

<div class="box">
<p><%= f.submit 'Update Book' %></p>
</div>

<p>
<%= link_to "Show",book_path(@book.id) %>
 | 
<%= link_to "Back",books_path %>
</p>

<% end %>
</div>